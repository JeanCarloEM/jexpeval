{
  "compilerOptions": {
    "outDir": "build/",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "module": "ES2015",
    "declaration": true,
    "declarationMap": true,
    "alwaysStrict": true,
    "allowJs": true,
    "lib": [
      "es5",
      "es6",
      "dom",
      "webworker"
    ]
  },
  "include": [
    "@types/**/*",
    "src/**/*",
    "tests/**/*",
    "@types/jsep.d.ts",
    "build/src/jsep.d.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "build/"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src/**/*.ts"
    ],
    "out": "doc"
  },
  "hooks": []
}