{
  "name": "jexpeval",
  "version": "1.0.0",
  "description": "Client-side logic evaluation writed in javascript.",
  "main": "dist/jexpeval.js",
  "scripts": {
    "webpack:prod": "npx webpack --color --config ./.webpack.production.js",
    "webpack:dev": "npx webpack --color --config ./.webpack.config.js",
    "webpack:all": "concurrently \"npm run webpack:dev\" \"npm run webpack:prod\"",
    "prettier-watch": "prettier --write --ignore-unknown {{changed}}",
    "delbuild": "rimraf \"build/\" -I",
    "deldist": "rimraf \"dist/\" -I",
    "clean": "concurrently \"npm run deldist\" \"npm run delbuild\"",
    "copy_src": "cpx -w -f \"src/**\" \"dist/src/\" -p --ignore \"*.ts\"",
    "copy_tests": "cpx -w -f \"tests/**\" \"dist/tests/\" -p --ignore \"*.ts\"",
    "copy": "concurrently \"npm run copy_src\" \"npm run copy_tests\"",
    "renew": "npm run clean && npm run copy",
    "server": "lite-server --baseDir=",
    "ts-watch": "tsc-watch --onSuccess \"\"",
    "ts:compile": "tsc --prettie\"\"",
    "watch:old": "concurrently \"npm run webpack:dev\" \"npm run build\" \"npm run ts-watch\"",
    "watch:changed": "npm run deldist && npm run prettier-watch && npm run webpack:all",
    "watch": "onchange \"src/**/*.ts\" \"src/**/*.tsx\" \"tests/**/*.ts\" \"tests/**/*.tsx\" -- npm run watch:changed",
    "start": "npm run renew && npm run concurrently \"npm run ts-watch\" \"npm run watch\" \"npm run server\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JeanCarloEM/jexpeval.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JeanCarloEM/jexpeval/issues"
  },
  "homepage": "https://jexpeval.jcem.pro",
  "devDependencies": {
    "concurrently": "8.2.0",
    "dts-bundle": "^0.1.1",
    "lite-server": "^2.6.1",
    "onchange": "^7.1.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "ts-loader": "^9.4.4",
    "tsc-hooks": "^1.1.2",
    "tsc-watch": "^6.0.4",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}