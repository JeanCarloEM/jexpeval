{
  "name": "jexpeval",
  "version": "1.0.0",
  "description": "Client-side logic evaluation writed in javascript.",
  "main": "build/src/jexpeval.js",
  "scripts": {
    "build": "npx webpack build --config ./webpack.production.config.js",
    "delbuild": "rimraf \"build/\" -I",
    "deldist": "rimraf \"build/\" -I",
    "clean": "concurrently \"npm run delbuild\" \"npm run deldist\"",
    "copy_src": "cpx -w -f \"src/**\" \"build/src/\" -p --ignore \"*.ts\"",
    "copy_tests": "cpx -w -f \"tests/**\" \"build/tests/\" -p --ignore \"*.ts\"",
    "copy": "concurrently \"npm run copy_src\" \"npm run copy_tests\"",
    "renew": "npm run clean && npm run copy",
    "server": "lite-server --baseDir=",
    "bundler": "npx webpack --color --watch",
    "ts-watch": "tsc-watch --onSuccess \"\"",
    "watch": "concurrently \"npm run bundler\" \"npm run build\" \"npm run ts-watch\"",
    "start": "concurrently \"npm run renew\" \"npm run watch\" \"npm run server\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JeanCarloEM/jexpeval.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JeanCarloEM/jexpeval/issues"
  },
  "homepage": "https://jexpeval.jcem.pro",
  "devDependencies": {
    "concurrently": "8.2.0",
    "lite-server": "^2.6.1",
    "npm-dts-webpack-plugin": "^1.3.12",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "ts-loader": "^9.4.4",
    "tsc-hooks": "^1.1.2",
    "tsc-watch": "^6.0.4",
    "typedoc": "^0.25.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}