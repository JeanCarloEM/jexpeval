{
  "name": "jexpeval",
  "version": "1.0.0",
  "description": "Client-side logic evaluation writed in javascript.",
  "main": "dist/jexpeval.js",
  "scripts": {
    "webpack:cjs": "npx webpack --config ./.webpack.cjs.js",
    "webpack:umd": "npx webpack --config ./.webpack.umd.js",
    "webpack:dev": "npx webpack --config ./.webpack.config.js",
    "webpack:all": "concurrently \"npm run webpack:dev\" \"npm run webpack:umd\"",
    "delbuild": "rimraf \"build/\" -I",
    "deldist": "rimraf \"dist/\" -I",
    "clean": "concurrently \"npm run deldist\" \"npm run delbuild\"",
    "copy:src": "cpx -f \"src/**/*.{html,json,css,js,png,jpg,svg}\" \"build/src/\" -p",
    "copy:tests": "cpx -f \"tests/**/*.{html,json,css,js,png,jpg,svg}\" \"build/tests/\" -p",
    "copy:all": "concurrently \"npm run copy:src\" \"npm run copy:tests\"",
    "copy:watch:src": "cpx -w -f \"src**/*.{html,json,css,js,png,jpg,svg} \"build/src/\" -p",
    "copy:watch:tests": "cpx -w -f \"tests/**/*.{html,json,css,js,png,jpg,svg}\" \"build/tests/\" -p",
    "copy:watch:all": "concurrently \"npm run copy:watch:src\" \"npm run copy:watch:tests\"",
    "renew": "npm run clean && npm run copy:all\"",
    "server": "lite-server --baseDir=",
    "sass:watch": "npx sass --error-css --watch --style=compressed ./:./",
    "ts:fixjs": "npx fix-esm-import-path ./build",
    "ts:after": "concurrently \"npm run webpack:all\" \"npm run ts:fixjs\"",
    "ts-watch": "tsc-watch --onSuccess \"npm run ts:after\"",
    "watch:old": "concurrently \"npm run webpack:dev\" \"npm run build\" \"npm run ts-watch\"",
    "prettier:watch": "onchange \"src/**/*\" \"tests/**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "watch:start": "concurrently \"npm run copy:watch:all\" \"npm run prettier:watch\" \"npm run ts-watch\" \"npm run sass:watch\" \"npm run server\"",
    "start": "npm run clean && npm run watch:start",
    "make": "npm run renew && npx tsc & npm run webpack:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JeanCarloEM/jexpeval.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/JeanCarloEM/jexpeval/issues"
  },
  "homepage": "https://jexpeval.jcem.pro",
  "devDependencies": {
    "@types/node": "^20.8.7",
    "concurrently": "8.2.0",
    "fix-esm-import-path": "^1.4.0",
    "htm": "^3.1.1",
    "lite-server": "^2.6.1",
    "onchange": "^7.1.0",
    "preact": "^10.18.1",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "sass": "^1.69.4",
    "ts-loader": "^9.4.4",
    "tsc-hooks": "^1.1.2",
    "tsc-watch": "^6.0.4",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2",
    "typescript-plugin-css-modules": "^5.0.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}